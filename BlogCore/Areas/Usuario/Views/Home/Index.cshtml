@model BlogCore.Domain.Entities.ViewModels.HomeVM

@{
    ViewData["Title"] = "Home Page";
}


<div class="row mt-1">
    <div class="col-ms-12">
        <h1 class="text-center text-white bg-secondary py-1">Articulos, Noticias y mas</h1>
    </div>
</div>


@if(Model.Articulo!.Count() > 0)
{
    <hr />
    <div class="row">
        @foreach (var articulo in Model.Articulo!.OrderBy(x => x.Id))
        {
            <div class="col-4">
                <div class="card">
                    <img src="@articulo.UrlImagen" class="img-thumbnail" width="100%" />
                    <div class="card-body">
                        <h5 class="text-center">@articulo.Nombre</h5>
                        <a asp-action="Detalle" class="btn btn-success" style="border-radius;10px" asp-route-id="@articulo.Id">
                            Más Información
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No hay artículos</p>
}